{% extends 'base.html.twig' %}

{% block title %}Acteur index{% endblock %}

{% block body %}
    <h1>Acteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_acteur</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>RoleA</th>
                <th>Datenaissance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for acteur in acteurs %}
            <tr>
                <td>{{ acteur.id }}</td>
                <td>{{ acteur.idActeur }}</td>
                <td>{{ acteur.Nom }}</td>
                <td>{{ acteur.Prenom }}</td>
                <td>{{ acteur.roleA }}</td>
                <td>{{ acteur.datenaissance ? acteur.datenaissance|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_acteur_show', {'id': acteur.id}) }}">show</a>
                    <a href="{{ path('app_acteur_edit', {'id': acteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_acteur_new') }}">Create new</a>
{% endblock %}
